<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zy.SmartCampus.mapper.PositionMapper">
    <select id="selectPosition" resultType="com.zy.SmartCampus.polo.Position" parameterType="java.lang.Integer">
        select * FROM position where departmentId=#{id}
    </select>

    <select id="selectPositionId" resultType="com.zy.SmartCampus.polo.Position">
        select * from position
    </select>
</mapper>